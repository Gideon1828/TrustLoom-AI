# ============================================
# FREELANCER TRUST EVALUATION SYSTEM
# Environment Variables Configuration File (EXAMPLE)
# Copy this file to .env and update with your values
# ============================================

# ============================================
# ENVIRONMENT
# ============================================
ENV=development
DEBUG=True

# ============================================
# API KEYS (Optional - for future enhancements)
# ============================================
# GitHub API Key (for advanced GitHub profile analysis)
GITHUB_API_KEY=your_github_api_key_here

# LinkedIn API Key (for advanced LinkedIn profile analysis)
LINKEDIN_API_KEY=your_linkedin_api_key_here

# ============================================
# MODEL PATHS
# ============================================
# BERT Model Configuration
BERT_MODEL_NAME=bert-base-uncased
BERT_MODEL_PATH=./models/bert
BERT_CACHE_DIR=./models/cache/bert

# LSTM Model Configuration
LSTM_MODEL_PATH=./models/lstm/lstm_model.h5
LSTM_WEIGHTS_PATH=./models/lstm/weights

# ============================================
# DATA PATHS
# ============================================
TRAINING_DATA_PATH=./data/training_data.csv
VALIDATION_DATA_PATH=./data/validation_data.csv
TEST_DATA_PATH=./data/test_data.csv
SAMPLE_RESUMES_PATH=./data/sample_resumes
PROCESSED_DATA_PATH=./data/processed

# ============================================
# SCORING THRESHOLDS & WEIGHTS
# ============================================
# BERT Score (Language Quality) - Max 25 points
BERT_MAX_SCORE=25

# LSTM Score (Project Realism) - Max 45 points
LSTM_MAX_SCORE=45

# Heuristic Score Components - Max 30 points total
GITHUB_MAX_SCORE=10
LINKEDIN_MAX_SCORE=10
PORTFOLIO_MAX_SCORE=5
EXPERIENCE_MAX_SCORE=5

# Total Resume Score (BERT + LSTM) - Max 70 points
RESUME_MAX_SCORE=70

# Total Heuristic Score - Max 30 points
HEURISTIC_MAX_SCORE=30

# Final Trust Score - Max 100 points
FINAL_MAX_SCORE=100

# ============================================
# RISK LEVEL THRESHOLDS
# ============================================
LOW_RISK_THRESHOLD=80
MEDIUM_RISK_THRESHOLD=55
HIGH_RISK_THRESHOLD=0

# ============================================
# MODEL CONFIGURATION
# ============================================
# BERT Configuration
BERT_MAX_LENGTH=512
BERT_EMBEDDING_DIM=768

# LSTM Configuration
LSTM_UNITS=128
LSTM_LAYERS=2
LSTM_DROPOUT=0.3
LSTM_EPOCHS=30
LSTM_BATCH_SIZE=32
LSTM_VALIDATION_SPLIT=0.15

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE=10485760

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================
# SECURITY SETTINGS
# ============================================
# Secret key for session management (change in production)
SECRET_KEY=your-secret-key-change-in-production-env

# Rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=10

# ============================================
# FILE PROCESSING CONFIGURATION
# ============================================
# Resume text processing
MAX_RESUME_LENGTH=50000
MIN_RESUME_LENGTH=100
TEXT_CLEANING_ENABLED=True

# Resume parsing timeout (seconds)
PARSING_TIMEOUT=30

# ============================================
# EXTERNAL API CONFIGURATION
# ============================================
# URL validation timeout (seconds)
URL_VALIDATION_TIMEOUT=10

# Maximum retries for external API calls
MAX_API_RETRIES=3

# Enable/disable external profile validation
ENABLE_GITHUB_VALIDATION=True
ENABLE_LINKEDIN_VALIDATION=True
ENABLE_PORTFOLIO_VALIDATION=True

# ============================================
# HEURISTIC RULES CONFIGURATION
# ============================================
# GitHub validation weights
GITHUB_MIN_REPOS=3
GITHUB_RECENT_ACTIVITY_MONTHS=6

# LinkedIn validation requirements
LINKEDIN_REQUIRE_EXPERIENCE=True
LINKEDIN_REQUIRE_SUMMARY=True
LINKEDIN_REQUIRE_PHOTO=True

# Experience consistency check
EXPERIENCE_MISMATCH_PENALTY_ENABLED=True

# ============================================
# PROJECT INDICATOR THRESHOLDS (for LSTM)
# ============================================
# Suspicious pattern detection
MAX_PROJECTS_PER_YEAR=4
MAX_OVERLAPPING_PROJECTS=2
MIN_AVG_PROJECT_DURATION_MONTHS=3

# Technology consistency threshold (0-1)
MIN_TECH_CONSISTENCY=0.6

# ============================================
# BERT NLP CONFIGURATION
# ============================================
# Language quality thresholds
MIN_LANGUAGE_QUALITY_SCORE=0.3
PROFESSIONAL_TONE_WEIGHT=0.4
SEMANTIC_CONSISTENCY_WEIGHT=0.6

# Flag generation thresholds
ENABLE_BERT_FLAGS=True
VAGUE_DESCRIPTION_THRESHOLD=0.5

# ============================================
# PERFORMANCE OPTIMIZATION
# ============================================
# Enable model caching
CACHE_MODELS_IN_MEMORY=True

# Enable lazy loading
LAZY_LOAD_MODELS=True

# Batch processing (for future use)
BATCH_SIZE_INFERENCE=1

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:3000
FRONTEND_BUILD_DIR=./frontend/build

# ============================================
# DATABASE (Optional - for future use)
# ============================================
# DATABASE_URL=sqlite:///./data/database.db
# DATABASE_ECHO=False

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================
# Production settings (override in production .env)
# PRODUCTION_HOST=0.0.0.0
# PRODUCTION_PORT=80
# ENABLE_HTTPS=True
# SSL_CERT_PATH=./certs/cert.pem
